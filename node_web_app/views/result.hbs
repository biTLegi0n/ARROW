<div class="main">
  {{#if showProfile}}
  <a href="/user/{{user.googleId}}" class="user">
  <div class="card">
    <div class="image">
      <img
        src="{{user.image}}"
        alt=""
        srcset=""
      />
    </div>
    <div class="profile-description">
      <div class="name">
        {{user.displayName}}
      </div>
      <div class="role">
        {{user.role}}
      </div>
    </div>
  </div>
  <div class="email card">
    {{user.email}}
  </div>
</a>
{{/if}}
